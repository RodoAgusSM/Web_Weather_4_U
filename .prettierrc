{
  "printWidth": 100,
  "semi": true,
  "arrowParens": "avoid",
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "bracketSameLine": true,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": { "proseWrap": "always" }
    },
    {
      "files": ["*.json", "*.jsonc"],
      "options": { "tabWidth": 2, "singleQuote": false }
    }
  ]
}
